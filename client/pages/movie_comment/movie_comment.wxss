/* pages/movie_comment/movie_comment.wxss */
.bg-color {
  z-index: 100;
  background-color: #342158;
}

.bg-color .page-name {
  color: #fff;
}

.no-comment {
  color: gray;
  font-style: italic;
  font-size: 40rpx;
  text-align: center;
  position: absolute;
  left: 0; top: 0;
  width: 100%; 
  height: 100%;
  line-height: 100vh;
}

.comment-list {
  position: absolute;
  top: 120rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 700rpx;
}

.blur {
  filter: blur(3px);
}

.comment-wrapper {
  box-sizing: border-box;
  height: 220rpx;
  padding: 0 35rpx;
}

.user-info {
  width: 100%;
  height: 100rpx;
  display: flex;
  align-items: center;
}

.user-image {
  box-sizing: border-box;
  width: 60rpx;
  height: 60rpx;
  margin-right: 20rpx;
  border-radius: 50%;
}

.user-name {
  flex-grow: 1;
  color: #342158;
  font-size: 28rpx;
  line-height: 40rpx;
}

.btn-comment-collection {
  width: 40rpx;
  height: 40rpx;
}

.user-comment {
  margin-left: 80rpx;
  margin-right: 30rpx;
}

.user-comment-text {
  max-height: 80rpx;
  width: 100%;
  font-size: 30rpx;
  color: #342158;
  text-overflow: ellipsis;
  overflow: hidden;
  -webkit-line-clamp: 2; /* 设置超出2行隐藏 */
  -webkit-box-orient: vertical;
  /* 设置 display 为 -webkit-box 或者 -webkit-inline-box 时为隐藏状态 */
  display: -webkit-inline-box;
}

/*语音评论样式设计*/
.audio-bar {
  position: relative;
  width: 400rpx;
  height: 100rpx;
  border-left: 50rpx solid #ffd251;
  border-right: 50rpx solid #ffd251;
  border-radius: 50rpx;
  background-color: #ffd251;
}

.audio-progress {
  position: absolute;
  top: 50%; right: 0;
  transform: translateY(-50%);
  width: 87%;
}

.btn-audio-control {
  position: absolute;
  width: 70rpx;
  height: 70rpx;
  top: 50%;
}

.btn-audio-pause,
.btn-audio-play {
  left: 0rpx;
  transform: translate(-50%, -50%);
}

.btn-audio-pause {
  width: 80rpx;
  height: 80rpx;
}

/* 语音评论样式设计结束 */

.btn-write-comment {
  box-sizing: border-box;
  position: fixed;
  left: 50%; bottom: 80rpx;
  transform: translateX(-50%);
  color: #342158;
  width: 300rpx;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #fff;
  border-radius: 40rpx;
  margin: 10rpx;
  text-align: center;
  box-shadow: 5rpx 8rpx 20rpx 5rpx rgba(0, 0, 0, 0.3);
}

/* 弹出框样式设计 */

.modal-wrapper {
  color: #342158;
  position: absolute;
  left: 50%; top: 45%;
  transform: translate(-50%, -50%);
  width: 80%;
  border-radius: 50rpx;
  background-color: white;
  box-shadow: 0 4rpx 15rpx 0 rgba(0, 0, 0, 0.6);
}

.modal-title {
  text-align: center;
  line-height: 100rpx;
  font-size: 65rpx;
  font-weight: bold;
  margin: 15rpx auto;
}

.comment-detail-wrapper {
  margin-top: 20rpx;
  padding: 0 30rpx;
  position: relative;
}

.comment-detail-user {
  display: flex;
  align-items: center;
  width: 100%;
}

.comment-detail-image {
  width: 60rpx;
  height: 60rpx;
  margin-left: 30rpx;
}

.comment-detail-name {
  margin-left: 20rpx;
}

.comment-detail-text-wrapper {
  height: 420rpx;
  margin-top: 20rpx;
  font-size: 40rpx;
  color: #342158;
  text-indent: 80rpx;
}

.comment-detail-text {
  position: relative;
  padding-top: 20rpx;
}

.comment-detail-text::before {
  content: '“';
  font-size: 150rpx;
  width: 150rpx;
  height: 150rpx;
  line-height: 150rpx;
  text-indent: 0;
  font-family: '黑体';
  position: absolute;
  left: 0rpx;
  top: 10rpx;
}

.modal-btn-group {
  margin: 30rpx auto;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-btn {
  box-sizing: border-box;
  font-size: 40rpx;
  height: 80rpx;
  line-height: 74rpx;
  padding: 0rpx 70rpx;
  border: 3rpx solid #342158;
  border-radius: 40rpx;
}

.overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
}