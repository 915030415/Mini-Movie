/* pages/movie_comment/movie_comment.wxss */
.bg-color {
  z-index: 100;
  background-color: #342158;
}

.bg-color .page-name {
  color: #fff;
}

.no-comment {
  color: gray;
  font-style: italic;
  font-size: 40rpx;
  text-align: center;
  position: absolute;
  left: 0; top: 0;
  width: 100%; 
  height: 100%;
  line-height: 100vh;
}

.stage {
  position: absolute;
  /*当采用相对定位时，margin的高度也会算在page页面的总高度中，于是page的高度比之前多120rpx,
  所以滑动barrage页面就会出现滚动条，且底部会出现白色未覆盖区域*/
  margin-top: 120rpx;
  width: 100%;
  height: calc(100% - 120rpx);
  perspective: 600px;
  transform-style: preserve-3d;
}

/*旋转开始*/
.card-back.wrapper-roating {
  transform: rotateY(0deg) translateZ(1rpx); 
  transition: transform 1.2s linear;
}


.card-front.wrapper-roating {
  /*真机有个小bug，虽然时间同步，但是旋转时，前后两个图片会交错显示，这里通过将前后两个图片错位1rpx，修复这个bug，在真机上保证旋转效果的正常显示*/
  transform: rotateY(90deg); 
  transition: transform 0.6s linear;
}

.card-back,
.card-front {
  transform-style: preserve-3d;
}

.card-front {
  transform: rotateY(0deg); 
}

.card-back {
  position: absolute;
  width: 100%;
  height: 100%;
  transform: rotateY(-180deg) translateZ(1rpx); 
}

.barrage-list.wrapper-roating-reverse {
  animation: barrageReverse 0.6s linear forwards;
}

@keyframes barrageReverse {
  from {
    transform: rotateY(0deg);
  }
  to {
    transform: rotateY(90deg);
  }
}

.card-front.wrapper-roating-reverse {
  animation: ListReverse 0.6s linear forwards;
}

@keyframes ListReverse {
  from {
    transform: rotateY(-90deg);
  }
  to {
    transform: rotateY(0deg);
  }
}

.card-back-bg {
  width: 100%;
  height: 100%;
}

.comment-list {
  background-color: white;
  backface-visibility: hidden;
}

.comment-list {
  width: 100%;
  height: 100%;
}

.comment-list::after {
  position: absolute;
  top: 0; left: 0;
  width: 100%;
  height: 100%;
  background-color: red;
}

.blur {
  filter: blur(3px);
}

.comment-wrapper {
  box-sizing: border-box;
  height: 220rpx;
  margin: auto;
  padding: 0 50rpx;
}

.user-info {
  width: 100%;
  height: 100rpx;
  display: flex;
  align-items: center;
}

.user-image {
  box-sizing: border-box;
  width: 60rpx;
  height: 60rpx;
  margin-right: 20rpx;
  border-radius: 50%;
}

.user-name {
  flex-grow: 1;
  color: #342158;
  font-size: 28rpx;
  line-height: 40rpx;
}

.btn-comment-collection {
  width: 40rpx;
  height: 40rpx;
}

.user-comment {
  margin-left: 80rpx;
  margin-right: 30rpx;
}

.user-comment-text {
  max-height: 80rpx;
  width: 100%;
  font-size: 30rpx;
  color: #342158;
  text-overflow: ellipsis;
  overflow: hidden;
  -webkit-line-clamp: 2; /* 设置超出2行隐藏 */
  -webkit-box-orient: vertical;
  /* 设置 display 为 -webkit-box 或者 -webkit-inline-box 时为隐藏状态 */
  display: -webkit-inline-box;
}

/*弹幕区样式*/
.barrage-list {
  position: absolute;
  top: 0; left: 0;
  width: 100%;
  height: 100%;
}

.barrage-list-bg {
  position: absolute;
  height: 100%;
  width: 100%;
  z-index: -1;
}

.barrage-comment {
  box-sizing: border-box;
  position: absolute;
  right: -550rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  min-height: 150rpx;
  width: 550rpx;
  max-height: 250rpx;
  color: white;
  background-color: rgba(0, 0, 0, 0.5);
  border-radius: 30rpx;
}

.slow {
  animation: slow 10s linear;
    /*屏幕宽度 + max-width*/
}

@keyframes slow {
  to {
    right: 1300rpx;
  }
}

.medium {
  animation: slow 9s linear;
}

@keyframes medium {
  to {
      right: 1300rpx;  /*屏幕宽度 + max-width*/
    }
}

.hight {
  animation: slow 8s linear;
}

@keyframes hight {
  to {
      right: 1300rpx;
    }
}

.barrage-user-info {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  width: 100%;
  margin-bottom: 5rpx;
}

.barrage-user-avator {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  margin: 0 20rpx 0 10rpx;
}

.barrage-user-name {
  font-size: 28rpx;
  color: white;
}

.barrage-comment-content {
  width: 100%;
  font-size: 30rpx;
  color: white;
  text-overflow: ellipsis;
  overflow: hidden;
  -webkit-line-clamp: 2; /* 设置超出2行隐藏 */
  -webkit-box-orient: vertical;
  /* 设置 display 为 -webkit-box 或者 -webkit-inline-box 时为隐藏状态 */
  display: -webkit-inline-box;
}

.btn-write-comment {
  box-sizing: border-box;
  position: fixed;
  left: 50%; bottom: 80rpx;
  z-index: 100;
  transform: translateX(-50%);
  color: #342158;
  width: 300rpx;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #fff;
  border-radius: 40rpx;
  margin: 10rpx;
  text-align: center;
  box-shadow: 5rpx 8rpx 20rpx 5rpx rgba(0, 0, 0, 0.3);
}

.btn-change-list {
  display: flex;
  justify-content: center;
  align-items: center;
  position: fixed;
  right: 10%; bottom: 80rpx;
  z-index: 200;
  width: 100rpx;
  height: 100rpx;
  color: #342158;
  font-size: 25rpx;
  background-color: white;
  text-align: center;
  border-radius: 50%;
  box-shadow: 5rpx 8rpx 20rpx 5rpx rgba(0, 0, 0, 0.3);
}

