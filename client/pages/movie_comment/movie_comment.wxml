<!--pages/movie_comment/movie_comment.wxml-->
<scroll-view y-scroll class='comment-list {{isShowModal ? "blur" : ""}}'>
  <view wx:for='{{commentList}}' wx:for-item='user' class='comment-wrapper' bindtap='onTapShowComment'>
    <image src='{{user.image}}' class='user-image'></image>
    <view class='user-info'>     
      <view class='user-name'>{{user.name}}</view>
      <view class='user-comment'>{{user.comment}}</view>
    </view>
    <image class='btn-comment-collection' src='{{isCollected ? "../../image/unlike.svg" : "../../image/like.svg"}}'></image>
  </view>
</scroll-view>

<!--弹出层；电影评论详情-->
<view class='overlay' wx:if='{{isShowModal}}' catchtap='onTapHiddenModal'></view>
<view class='modal-wrapper' wx:if='{{isShowModal}}'>
  <view class='movie-name'>{{movieName}}</view> 
  <view class='comment-detail-wrapper'>
    <view class='comment-detail-user'>
      <image class='comment-detail-image' src='{{commentList[0].image}}'></image>
      <view class='comment-detail-name'>{{commentList[0].name}}</view>
    </view>
    <scroll-view scroll-y="true" class='comment-detail-text-wrapper'>
      <view class='comment-detail-text'>{{commentList[0].comment}}</view>
    </scroll-view>
  </view>
  <image src='{{isCollected ? "../../image/unlike.svg" : "../../image/like.svg"}}' class='like-icon'></image>
</view>
