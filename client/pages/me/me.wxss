/* pages/me/me.wxss */
.bg-color {
  z-index: 100;
  background-color: #342158;
}

.bg-color .page-name {
  color: #fff;
}

.no-comment {
  color: gray;
  font-style: italic;
  font-size: 40rpx;
  text-align: center;
  position: absolute;
  left: 0; top: 0;
  width: 100%; 
  height: 100%;
  line-height: 100vh;
}

.comment-list {
  position: absolute;
  top: 120rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 700rpx;
}

.blur {
  filter: blur(3px);
}

.comment-wrapper {
  box-sizing: border-box;
  height: 220rpx;
  padding: 0 35rpx;
}

.user-info {
  width: 100%;
  height: 100rpx;
  display: flex;
  align-items: center;
  font-size: 28rpx;
  line-height: 40rpx;
}

.user-image {
  box-sizing: border-box;
  width: 60rpx;
  height: 60rpx;
  margin-right: 20rpx;
  border-radius: 50%;
}

.user-name {
  color: #342158;
}

.comment-movie {
  flex-grow: 1;
  margin-left: 20rpx;
  color: rgba(0, 0, 0, 0.3);
}

.bold {
  font-weight: bold;
}

.btn-comment-collection {
  width: 40rpx;
  height: 40rpx;
}

.user-comment {
  margin-left: 80rpx;
  margin-right: 30rpx;
}

.user-comment-text {
  min-height: 100rpx;
  width: 100%;
  font-size: 30rpx;
  color: #342158;
  text-overflow: ellipsis;
  overflow: hidden;
  -webkit-line-clamp: 2; /* 设置超出2行隐藏 */
  -webkit-box-orient: vertical;
  /* 设置 display 为 -webkit-box 或者 -webkit-inline-box 时为隐藏状态 */
  display: -webkit-inline-box;
}

/*语音评论样式设计*/
.audio-bar {
  position: relative;
  width: 400rpx;
  height: 100rpx;
  border-left: 50rpx solid #ffd251;
  border-right: 50rpx solid #ffd251;
  border-radius: 50rpx;
  background-color: #ffd251;
}

.audio-progress {
  position: absolute;
  top: 50%; right: 0;
  transform: translateY(-50%);
  width: 87%;
}

.btn-audio-control {
  position: absolute;
  width: 70rpx;
  height: 70rpx;
  top: 50%;
}

.btn-audio-pause,
.btn-audio-play {
  left: 0rpx;
  transform: translate(-50%, -50%);
}

.btn-audio-pause {
  width: 80rpx;
  height: 80rpx;
}

/* 语音评论样式设计结束 */
.btn-write-comment {
  box-sizing: border-box;
  position: fixed;
  left: 50%; bottom: 80rpx;
  transform: translateX(-50%);
  color: #342158;
  width: 300rpx;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #fff;
  border-radius: 40rpx;
  margin: 10rpx;
  text-align: center;
  box-shadow: 5rpx 8rpx 20rpx 5rpx rgba(0, 0, 0, 0.3);
}