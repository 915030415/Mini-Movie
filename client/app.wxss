/**app.wxss**/
page {
  width: 100%;
  height: 100%;
  position: relative;
}

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
} 

.header {
  position: fixed;
  width: 750rpx;
  height: 120rpx;
  background-color: white;
}

.icon-back-to {
  float: left;
  width: 50rpx;
  height: 50rpx;
}

.page-name {
  position: absolute;
  left: 50%; bottom: 25rpx;
  transform: translateX(-50%);
  margin: auto;
  text-align: center;
  color: black;
  font-size: 30rpx;
}
